  margin: 35rpx auto 0 auto;
}

.main-activity > .tips {
  margin-left: 0;
}

.main-activity > image {
  width: 22rpx;
  height: 27rpx;
  margin-right: 28rpx;
}

.main-activity > view {
  color: #e84358;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
}

.main-activity > view.bold {
  font-family: PingFangSC-Semibold;
  font-size: 26rpx;
}

.flex-grow {
  flex-grow: 1;
  text-align: right;
}

