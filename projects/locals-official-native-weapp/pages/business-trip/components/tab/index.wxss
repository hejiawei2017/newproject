.tab {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.tab-icon {
	margin-bottom: 26rpx;
	display: flex;
	height: 70rpx;
	width: 70rpx;
	justify-content: center; /* 水平居中 */
	align-items: center;     /* 垂直居中 */
}

.tab-icon-img {
	flex: 1;
	width: 100%;
}

.tab-text {
	font-size: 28rpx;
	color: #979797;
}