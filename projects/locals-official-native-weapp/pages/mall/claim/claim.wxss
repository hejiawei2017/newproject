.giver {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  margin: 30rpx 44rpx 37rpx 44rpx;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
}

.giver__avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.giver__name {
  margin-left: 26rpx;
  font-size: 16px;
  color: #333;
  font-weight: bold;
}

.goods-wrap {
  background: #fff;
  border-radius: 8rpx;
  padding: 26rpx 42rpx 46rpx 42rpx;
  -webkit-box-shadow: 0 6rpx 32rpx rgba(215, 215, 215, 0.5);
          box-shadow: 0 6rpx 32rpx rgba(215, 215, 215, 0.5);
  margin: 0 30rpx 62rpx 30rpx;
}

.goods-wrap__cover {
  height: 408rpx;
  width: 100%;
  margin-bottom: 26rpx;
}

.goods-wrap__name {
  font-size: 16px;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #333333;
  line-height: 22px;
  margin-bottom: 8rpx;
}

.goods-wrap__info {
  font-size: 13px;
  font-family: PingFang-SC-Medium;
  color: #999999;
  line-height: 18px;
}

.submit {
  margin: 0 30rpx;
  background: #E84358;
  border-radius: 8rpx;
  color: #fff;
  font-size: 18px;
  font-weight: bold;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}
