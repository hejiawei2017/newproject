.panel {
  position: relative;
  width: 80%;
}

.panel image {
  width: 100%;
}

.panel__tap {
  width: 100%;
  height: 90rpx;
  position: absolute;
  right: 0;
  bottom: 70rpx;
}

.submit {
  background: #E84358;
  color: #fff;
  font-size: 16px;
  font-weight: bold;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
}

.buy-wrap {
  height: 108rpx;
  width: 100%;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  font-size: 16px;
  font-family: DIN-Medium;
  font-weight: 500;
  color: #e84358;
  line-height: 30px;
}

.final__price {
  border-top: 2rpx solid whitesmoke;
  -webkit-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
  line-height: 108rpx;
