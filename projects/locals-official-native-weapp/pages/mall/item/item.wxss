  margin-left: 46rpx;
  font-size: 16px;
  color: #333;
}

.head__info__price {
  color: #E84358;
  font-size: 32rpx;
  margin-top: 10rpx;
}

.head__info__originprice {
  color: #ccc;
  font-size: 12px;
  margin-top: 10rpx;
