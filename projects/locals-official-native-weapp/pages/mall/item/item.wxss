@charset "UTF-8";
.img {
  width: 100%;
}

.wrap {
  position: relative;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}

.tap {
  width: 300rpx;
  height: 80rpx;
  position: absolute;
  right: 0;
  bottom: 30rpx;
}

.wrap:last-child {
  margin-bottom: 200rpx;
}

.pop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
