  font-size: 26rpx;
  color: #999999;
  padding-left: 20rpx;
  line-height: 68rpx;
  margin-top: 22rpx;
}

.filterwrap--select {
  border-color: #E84358;
  color: #E84358;
}

.head {
  display: -webkit-box;
