}

.final__price__contact__text {
  font-size: 24rpx;
  margin-left: 10rpx;
}

.price {
  margin-left: 50rpx;
}

.origin-price {
  text-decoration: line-through;
  color: #CCCCCC;
  font-size: 14rpx;
  margin-left: 20rpx;
}

.buy-wrap .submit {
  position: inherit;
  margin: 0;
  width: 196rpx;
  border-radius: 0;
  height: 108rpx;
  line-height: 108rpx;
}

.filterwrap {
