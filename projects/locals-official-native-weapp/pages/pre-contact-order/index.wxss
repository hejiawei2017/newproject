.wrap {
    padding: 26rpx 40rpx 100rpx 40rpx;
}
.container {
    padding: 50rpx 0;
    border-bottom: 1px solid rgba(245, 245, 245, 0.8);
}

.no-padding-top {
    padding-top: 0;
}
  
.container .title {
    font-size: 36rpx;
    line-height: 54rpx;
    letter-spacing: 1rpx;
    font-weight: 400;
    color: #484848;
}
/** house-info **/
.house-info {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

.house-info .left {
  flex-basis: 377rpx;
}

.house-info .right {
  flex-basis: 216rpx;
}

.house-info .right image {
  width: 216rpx;
    height: 148rpx;
  background: url(https://oss.localhome.cn/logo.png) no-repeat;
  background-size: 100% 100%;
    border-radius: 8rpx;
}

.house-info .left .title {
  font-weight: 400;
  line-height: 44rpx;
  font-size: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333333;
}

.house-info .left .number-info {
    display: flex;
  align-items: center;
  margin-top: 10rpx;
    font-size: 22rpx;
  font-weight: 100;
    color: #555555;
}
.house-info .left .star {
  margin-top: -6rpx;
  margin-right: 5rpx;
}
.house-info .left .tenant-info {
  margin-left: 5rpx;
  margin-right: 10rpx;
}
.house-info .night-price {
  font-size: 30rpx;
	font-weight: 300;
	line-height: 54rpx;
	letter-spacing: 1px;
	color: #555555;
}

.checkin-container {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    text-align: center;
    align-items: center;
    padding: 20rpx 0 0 0;
    font-weight: 300;
}
.checkin-container .checkin-date {
    display: flex;
    flex-flow: column nowrap;
}
.checkin-container .checkin-date .text {
    align-self: flex-start;
    font-size: 24rpx;
    line-height: 54rpx;
    letter-spacing: 1px;
    color: #333333;
}
.checkin-container .checkin-date .date {
    font-size: 36rpx;
    line-height: 54rpx;
    letter-spacing: 1px;
    color: #333333;
}
.checkin-container .checkin-date .date .day {
    font-size: 24rpx;
	line-height: 54rpx;
	letter-spacing: 1px;
	color: #333333;
}
.checkin-container .days {
    border-radius: 16px;
	border: solid 1px #666666;
    padding: 0rpx 20rpx;
    font-size: 24rpx;
    line-height: 24rpx;
	letter-spacing: 1px;
	color: #666666;
}
.checkin-guest {
    background-color: #fff;
    margin-top: 40rpx;
}

.check-in-count {
    font-weight: 300;
}

.size24 {
    font-size: 24rpx;
}
.line {
    height: 24rpx;
    background: rgb(241, 241, 241);
}
.textarea {
    margin-top: 45rpx;
    width: 100%;
    box-sizing: border-box;
    font-size: 28rpx;
	font-weight: 300;
	line-height: 43rpx;
	letter-spacing: 1px;
	color: #555555;
}
.insurance {
    margin-top: 20rpx;
    box-sizing: border-box;
    padding: 8rpx;
    border: 1px dashed rgb(255, 153, 36); 
    display: flex;
    flex-flow: row nowrap;
    border-radius: 20rpx;
    justify-content: space-between;
}
.insurance view {
    background: rgb(255, 153, 20);
    border-radius: 10px;
    font-size: 24rpx;
    flex-basis: 17%;
    padding: 4rpx;
    text-align: center;
    align-self: center;
}
.insurance text {
    font-size: 20rpx;
    color: darkgray;
    flex-basis: 80%;
    align-self: center;
}

.footer{
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  display: flex;
  z-index: 100;
  align-items: center;
  justify-content: center;

}
.footer button{
    width: 100%;
    background-color: #e84358;
    border-radius: 15rpx;
    color: #fff;
}

.font-size {
    font-size: 36rpx !important;
    line-height: 54rpx;
    letter-spacing: 1rpx;
    font-weight: 400;
    color: #484848 !important;
}
.stars-container {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  margin-right: 6rpx;
  height: 18rpx;
}