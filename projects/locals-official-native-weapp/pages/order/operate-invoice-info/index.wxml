        <button wx:if="{{wxmlTitle === '填写发票' && from === 'fillInInvoice'}}" class="btn del" bindtap="getWechatInvoice">获取微信发票</button>
        <button class="btn" type="warn" bindtap="saving">保存</button>
    </view>
</view>
