        <template is="invoiceType" data="{{ activeIndex }}"/>
        <view>
            <form>
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                    <template is="invoiceInfo" data="{{ invoiceInfoType,isSpecialInvoice,titleName,taxCode }}" />
                    <template is="emailConsigneeInfo" data="{{ email, phoneNumber }}"/>
                </view>
                <!-- <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
