.pay {
    background: #e84358;
    color: white;
    padding: 5rpx 0;
    width: 320rpx;
    text-align: center;
    border-radius: 15rpx;
    font-weight: 300;
    font-size: 28rpx;
    margin-top: 32rpx;
    border: none;
}

.main-container {
    text-align: center;
}

.footer {
   display: flex;
   flex-flow: row nowrap; 
   justify-content: space-between;
   position: absolute;
   bottom: 45rpx;
   left: 30rpx;
   right: 30rpx;
   font-size: 30rpx;
   font-weight: 30rpx;
}

.footer button {
    text-align: center;
    flex-basis: 48%;
    border: 1px solid #e84358;
    color: #e84358;
    font-weight: 300;
    border-radius: 15rpx;
    font-size: 30rpx;
    line-height: 1;
    padding: 20rpx 0;
    background: transparent;
    display: inline-block;
}
