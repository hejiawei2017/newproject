<view class="evaluation">
    <view class="houseSource">
        <view class="houseSource-info">
            <view class="title">
                {{bookingInfo.title}}
            </view>
            <view class="space">
                {{ bookingInfo.tenantNumber || 0 }}人·{{ bookingInfo.roomNumber || 0 }}室·{{ bookingInfo.bedNumber || 0 }}床·{{ (bookingInfo.publicToiletNumber || 0) + (bookingInfo.toiletNumber || 0) }}卫
            </view>
        </view>
        <image src="{{bookingInfo.imgPath}}" />
    </view>
    <view class="star">
        <view class="item">
            <view class="label">
                描述相符
            </view>
            <view>
                <image
                    wx:for="{{StarNumArr}}"
                    wx:key="star-image"
                    data-name="descriptionStar"
                    data-val="{{item}}"
                    bindtap="changeStar"
                    src="{{descriptionStar >= item ? 'https://oss.localhome.cn/new_icon/starcc.png' : 'https://oss.localhome.cn/new_icon/starc1.png'}}" />
            </view>
        </view>
        <view class="item">
            <view class="label">
                沟通交流
            </view>
            <view>
                <image
                    wx:for="{{StarNumArr}}"
                    wx:key="star-image"
                    data-name="communicationStar"
                    data-val="{{item}}"
                    bindtap="changeStar"
                    src="{{communicationStar >= item ? 'https://oss.localhome.cn/new_icon/starcc.png' : 'https://oss.localhome.cn/new_icon/starc1.png'}}" />
            </view>
        </view>
        <view class="item">
            <view class="label">
                干净指数
            </view>
            <view>
                <image
                    wx:for="{{StarNumArr}}"
                    wx:key="star-image"
                    data-name="cleanIndexStar"
                    data-val="{{item}}"
                    bindtap="changeStar"
                    src="{{cleanIndexStar >= item ? 'https://oss.localhome.cn/new_icon/starcc.png' : 'https://oss.localhome.cn/new_icon/starc1.png'}}" />
            </view>
        </view>
        <view class="item">
            <view class="label">
                位置便利指数
            </view>
            <view>
                <image
                    wx:for="{{StarNumArr}}"
                    wx:key="star-image"
                    data-name="locationIndexStar"
                    data-val="{{item}}"
                    bindtap="changeStar"
                    src="{{locationIndexStar >= item ? 'https://oss.localhome.cn/new_icon/starcc.png' : 'https://oss.localhome.cn/new_icon/starc1.png'}}" />
            </view>
        </view>
        <view class="item">
            <view class="label">
                办理入住
            </view>
            <view>
                <image
                    wx:for="{{StarNumArr}}"
                    wx:key="star-image"
                    data-name="checkInStar"
                    data-val="{{item}}"
                    bindtap="changeStar"
                    src="{{checkInStar >= item ? 'https://oss.localhome.cn/new_icon/starcc.png' : 'https://oss.localhome.cn/new_icon/starc1.png'}}" />
            </view>
        </view>
        <view class="item">
            <view class="label">
                性价比
            </view>
            <view>
                <image
                    wx:for="{{StarNumArr}}"
                    wx:key="star-image"
                    data-name="costPerformanceStar"
                    data-val="{{item}}"
                    bindtap="changeStar"
                    src="{{costPerformanceStar >= item ? 'https://oss.localhome.cn/new_icon/starcc.png' : 'https://oss.localhome.cn/new_icon/starc1.png'}}" />
            </view>
        </view>
    </view>
    <view class="textarea">
        <textarea placeholder="请输入评价" bindinput="changeInput" data-index="comment"/>
    </view>
    <view class="button  {{ isFullScreen ? 'full-screen-bottom' : ''}}">
        <button type="warn" bindtap="commitData">提交点评</button>
        <view class="text">提交点评后可获20元优惠券</view>
    </view>
</view>
<im-message
    id="im-message"
    noAttached='{{false}}'
/>
<auth-drawer-box 
    id="auth-drawer-box"
    bind:cancelEvent="signInCallback"
/>