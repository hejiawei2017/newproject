.evaluation{
    display: flex;
    flex-flow: column;
    min-height:100vh;
}
.houseSource{
    display: flex;
    height: 227rpx;
    padding-top: 29rpx;
    margin: 0 40rpx;
    box-sizing: border-box;
    border-bottom: 1px solid rgba(51, 51, 51, 0.1)
}
.houseSource .houseSource-info{
    flex: 1;
    padding: 20rpx 50rpx 0 0;
}
.houseSource .title{
    font-family: "PingFangSC-Semibold";
	font-size: 32rpx;
	line-height: 38rpx;
	letter-spacing: 1rpx;
    color: #484848;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.houseSource .space{
    font-family: "PingFangSC-Light";
	font-size: 20rpx;
	line-height: 54rpx;
	color: #555555;
}
.houseSource image{
	width: 216rpx;
	height: 148rpx;
	border-radius: 8rpx;
}
.star{
    padding: 45rpx 0 25rpx;
}
.star .item{
    height: 78rpx;
    padding: 0 40rpx;
    display: flex;
    align-items: center;
}
.star .item .label{
    flex: 1;
    font-family: "PingFangSC-Regular";
	font-size: 30rpx;
	letter-spacing: 1rpx;
	color: #484848;
}
.star .item image{
    width: 26rpx;
    height: 25rpx;
    padding: 10rpx;
}
.textarea{
    padding: 0 40rpx;
    flex: 1;
}
.textarea textarea{
    padding: 26rpx;
    font-family: "PingFangSC-Regular";
    letter-spacing: 1rpx;
    font-size: 28rpx;
    background-color: #faf9f9;
    border-radius: 8rpx;
    width: 100%;
    height: 268rpx;
    box-sizing: border-box;
}
.button{
    padding: 40rpx;
}
.button .text {
    text-align: center;
    font-size: 28rpx;
    line-height: 100rpx;
    color: #e84358;
}
.button button{
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 14rpx;
    font-family: "PingFangSC-Regular";
    font-size: 32rpx;
    letter-spacing: 1px;
}

.modal-text {
    font-size: 30rpx;
    line-height: 220rpx;
    text-align: center;
}