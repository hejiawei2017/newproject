/* pages/order/guest-details/index.wxss */

.container {
  padding: 30rpx;
  background-color: #f5f6f8;
  flex: 1;
  height: 100vh;
}

.title-container {
  height: 62rpx;
  overflow: hidden;
}

.title {
  font-size: 36rpx;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
}

.content-container {
  padding-bottom: 10rpx;
}

.content-item {
  width: 100%;
  max-height: 136rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 5rpx 32rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 25rpx;
  margin-bottom: 20rpx;
}

.user-mate {
  padding-bottom: 5rpx;
}

.user-mate-text {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.status-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.status-normal {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  padding-right: 10rpx;
}

.status-highlight {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(232, 67, 88, 1);
}

.insurance-tips{
  display: flex;
  align-items: center;
  border:1px dashed rgba(232,67,88,1);
  border-radius:10rpx;
  padding: 5rpx 45rpx 5rpx 7rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.insurance-tips-left{
  width:180rpx;
  background:rgba(232,67,88,0.11);
  border-radius:10rpx 0rpx 0rpx 10rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(232,67,88,1);
  padding: 15rpx;
  text-align: center;
}
.insurance-tips-right{
  padding-left: 20rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
