.container {
  padding: 30rpx 32rpx 150rpx;
}

.addmore {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  text-align: center;
  font-size: 32rpx;
  padding-top: 10rpx;
  padding-bottom: 40rpx;
  width: 100%;
  box-shadow:0px -15px 24px 0px rgba(38,38,38,0);
}

.addButton {
  display: inline-block;
  background: #fff;
  color: #e84358;
  margin: 0 12rpx;
  border-radius:10rpx;
  width: 334rpx;
  border:1px solid rgba(232,67,88,1);
}

.addButton2 {
  display: inline-block;
  background: #e84358;
  margin: 0 12rpx;
  color: #ffffff;
  border-radius:10rpx;
  width: 334rpx;
  border:1px solid rgba(232,67,88,1);
}

.add {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  position: relative;
  vertical-align: middle;
  margin-right: 20rpx;
  border: solid 1rpx #e84358;
  border-radius: 100%;
}

.cross-l {
  width: 20rpx;
  height: 2rpx;
  background: #e84358;
  position: absolute;
  top: 14rpx;
  left: 5rpx;
}

.cross-r {
  width: 2rpx;
  height: 20rpx;
  position: absolute;
  left: 14rpx;
  top: 5rpx;
  background: #e84358;
}

.invoice-wrap {
  height: 100%;
}

.invoice-item {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  width: 690rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 5rpx 32rpx 0rpx rgba(0, 0, 0, 0.13);
  border-radius: 8rpx;
  margin-bottom: 32rpx;
}

.invoice-item .name {
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;
  flex-grow: 1;
  /* text-overflow: ellipsis;
  white-space: pre-wrap;
  overflow: hidden; */
  margin-top: 30rpx;
  margin-left: 30rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  width: 630rpx;
}

.change {
  flex-grow: 1;
  display: inline-block;
  height: 100rpx;
  width: 112rpx;
  background: #e07574;
  position: relative;
}

.checkbox {
  padding-right: 36rpx;
  margin-top: 8rpx;
}

.checkbox image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: top;
}

.btn {
  width: 225rpx;
  height: 100rpx;
  display: inline-block;
  position: absolute;
  top: 0;
  right: 0;
  box-shadow: 0rpx 7rpx 10rpx 0rpx rgba(225, 56, 63, 0.33);
  border-radius: 0rpx 10rpx 10rpx 0rpx;
  background: #e07574;
  text-align: right;
  overflow: hidden;
}

.invoice-item-tip {
  display: block;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.movable-area {
  width: 690rpx;
  height: 100rpx;
  overflow-x: hidden;
}

.movable-view {
  height: 100rpx;
  width: 915rpx;
}
.btn .change-line{
  width: 2rpx;
  height:27rpx;
  background:rgba(255,255,255,1);
  opacity:0.35;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.btn .change image{
  height: 32rpx;
  width: 32rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.invoiceType{
  background:#F89A88;
  border-radius:10rpx;
  font-size:22rpx;
  padding:6rpx 15rpx;
  color: #ffffff;
  position: absolute;
  top: 50%;
  left: 26rpx;
  transform: translateY(-50%);
}
.invoiceName{
  margin-left: 80rpx;
}
.specialInvoice{
  background:#E84358;
}