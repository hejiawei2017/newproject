/* pages/order/order-price/index.wxss */
.page{
  padding: 0 30rpx 120rpx 30rpx;
}
.section{
  border-bottom: 1rpx solid rgba(0,0,0,0.11);
  padding-bottom: 43rpx;
  margin-top: 36rpx;
}
.title{
  margin-bottom: 50rpx;
  font-size: 36rpx;
  font-weight: 500;
  color:rgba(51,51,51,1);
}
.flex{
  display: flex;
  align-items: center;
  justify-content: flex-start
}
.row{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 39rpx;
}
.label{
  font-size:30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.price{
  font-size:30rpx;
  font-weight:600;
  color:rgba(51,51,51,1);
}
.icons{
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.date-price{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 25rpx;
}
.date-price text:nth-child(1){
  font-size: 24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.date-price text:nth-child(2){
  font-size: 24rpx;
  font-weight:600;
  color:rgba(153,153,153,1);
}
.tips{
  font-size:22rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-left: 20rpx;
}
.price-color {
  color: #E84358;
}
.price-delete{
  text-decoration: line-through;
  font-size:30rpx;
  font-weight:600;
  color:rgba(153,153,153,1);
  margin-right: 20rpx;
}
.page .symbol{
  font-size: 20rpx;
}
.footer{
  display: flex;
  margin-top: 36rpx;
  justify-content: space-between;
  align-items: center;
}
.footer-label {
  font-size: 36rpx;
  font-weight: 500;
  color:rgba(51,51,51,1);
}
.footer-price{
  font-size: 36rpx;
  font-weight: 500;
  color:rgba(51,51,51,1);
}