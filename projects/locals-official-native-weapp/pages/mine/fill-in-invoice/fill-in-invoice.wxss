/* pages/mine/fill-in-invoice/fill-in-invoice.wxss */
.fillin-invoice{
  margin-bottom: 150rpx;
}
.fillin-invoice-navbar{
  width:100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size:28rpx;
  text-align: right;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(232,67,88,1);
}
.fillin-invoice-navbar text{
  display: inline-block;
  margin-right: 30rpx;
}
.invoice-tem{
  margin: 50rpx 30rpx;
}
.invoice-tem-h2{
  font-size:36rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-bottom: 10rpx;
}
.invoice-tem-lable{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  position: relative;
  min-height: 34rpx;
  line-height: 34rpx;
}
.invoice-line{
  border-bottom: 1rpx rgba(51,51,51,0.11) solid;
}
.invoice-tem-lable .invoice-choose-type{
  position: absolute;
  top:0;
  right: 0; 
}
.invoice-tem-lable .invoice-choose-type image{
  width: 34rpx;
  height: 34rpx;
}
.invoice-raise{
  display: inline-block;
  margin-left: 75rpx;
}
.invoice-raise text{
  display: inline-block;
  margin-left: 28rpx;
  vertical-align: top;
}
.invoiceCommon{
  margin:0 58rpx;
}
.invoice-tem-lable-tipImg{
  border: 1rpx #999999 solid;
  border-radius: 50%;
  color: #999999;
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  display: inline-block;
  margin-left: 20rpx;
  text-align: center;
}
.invoice-tem-lable .invoice-tem-content{
  display: inline-block;
  margin: 35rpx 0 40rpx;
  width: 400rpx;
}
.invoice-tem-title{
  width: 180rpx;
  font-size:30rpx;
  color:rgba(153,153,153,1);
  margin: 35rpx 40rpx 40rpx 0;
  vertical-align:top;
  display:inline-block;
}
.invoice-choose-type-small{
  font-size: 24rpx;
}
.invoice-red{
  color: #E84358;
}

.invoice-confirm{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 112rpx;
  background:rgba(255,255,255,1);
  z-index: 100;
  box-shadow:0px -15px 24px 0px rgba(38,38,38,0.06);
}
.invoice-confirm-cash{
  width: 50%;
  font-size:28rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(51,51,51,1);
  position: absolute;
  left: 38rpx;
  top: 50%;
  transform: translateY(-50%);
}
.invoice-confirm-tip{
  display: block;
  font-size:24rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
}
.invoice-confirm-confirm{
  width:214rpx;
  height:80rpx;
  background:#E84358;
  border-radius:12rpx;
  position: absolute;
  right: 33rpx;
  top: 50%;
  transform: translateY(-50%);
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight:400;
  line-height: 80rpx;
  letter-spacing: 20rpx;
  padding-left: 20rpx
}
.fillin-invoice-common{
  text-align: center;
  background: #f7f6f6;
  padding: 0rpx 30rpx 30rpx;
}
.fillin-invoice-block{
  display: inline-block;
  width:690rpx;
  min-height:100rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 7rpx 21rpx 0rpx rgba(0, 0, 0, 0.04);
  border-radius:10rpx;
  margin-top: 20rpx;
  position: relative;
  text-align: left;
}
.invoiceType{
  background:#F89A88;
  border-radius:10rpx;
  font-size:22rpx;
  padding:6rpx 15rpx;
  color: #ffffff;
  position: absolute;
  top: 50%;
  left: 26rpx;
  transform: translateY(-50%);
}
.specialty-invoice{
  background:#E84358;
}
.fillin-invoice-title{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  position: absolute;
  top: 50%;
  left: 120rpx;
  transform: translateY(-50%);
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  width: 500rpx;
}
.fillin-invoice-btns{
  position: absolute;
  right: 18rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 34rpx;
  height: 34rpx;
}
.fillin-invoice-btns image{
  width: 34rpx;
  height: 34rpx;
  vertical-align:top;
}
.noListData{
  padding:40rpx 0 10rpx;
  font-size:26rpx;
}
.nochoose{
  background: #F9CACF;
}