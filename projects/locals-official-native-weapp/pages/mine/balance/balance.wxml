<wxs src="../../../wxs/DateUtils.wxs" module="dateUtils" />

<view class="balance">
    <view class="balance-header">
        <view>当前储值余额</view>
        <view>¥{{ wallet.availableMoney }}</view>
        <view>储值赠送余额：<text class="momey">¥{{ wallet.availableConsumerCashMoney }}</text></view>
        <!-- <view catchtap="tojump">充值</view> -->
    </view>
    <scroll-view scroll-y="true" class="list">
        <view
            wx:for="{{ walletList }}"
            wx:key="{{ index }}"
            class="list__item"
        >
            <view class="item__descript">
                <view class="descript__title">{{ item.title }}</view>
                <view class="descript__time">{{ dateUtils.setTimeDate(item.createTime) }}</view>
            </view>
            <view class="item__momey plus">{{ item.changeMoney > 0 ? '+' + item.changeMoney : item.changeMoney  }}</view>
        </view>
    </scroll-view>
</view>

<im-message
  id="im-message"
  noAttached='{{false}}'
/>

<auth-drawer-box 
    id="auth-drawer-box"
    bind:cancelEvent="signInCallback"
/>
