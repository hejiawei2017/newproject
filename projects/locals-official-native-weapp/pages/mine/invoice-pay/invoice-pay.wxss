/* pages/mine/invoice-pay/invoice-pay.wxss */
.invoice-pay{
  text-align: center;
  width: 100%;
}
.invoice-pay-info{
  display: inline-block;
  width:690rpx;
  height:210rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 3rpx 21rpx 0rpx rgba(0, 0, 0, 0.07);
  border-radius:10rpx;
  margin-top: 28rpx;
  text-align: left;
}
.invoice-pay-num{
  margin: 20rpx 30rpx 0;
  font-size:72rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  border-bottom: 1rpx rgba(0,0,0,0.11) solid;
}
.invoice-pay-small{
  font-size: 48rpx;
}
.invoice-pay-tip{
  margin-top: 23rpx;
  display: inline-block;
  font-size:22rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin: 0 30rpx;
}
.invoice-pay-btn{
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width:100%;
  height:120rpx;
  padding-bottom: 25rpx;
}
.invoice-pay-btn text{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  line-height: 90rpx;
  color: #ffffff;
  font-size:32rpx;
  width:690rpx;
  height:90rpx;
  background:rgba(232,67,88,1);
  border-radius:10rpx;
  display: inline-block;
}
.modal{
  background: rgba(0, 0, 0, 0.4);
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.success-modal{
  width:588rpx;
  background:rgba(255,255,255,1);
  border-radius:20rpx;
  position: absolute;
  top: 43%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.invoice-pay-close{
  width:60rpx;
  height:60rpx;
  position: absolute;
  top: 80%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.success-modal-title{
  text-align: left;
  height: 60rpx;
  margin: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx rgba(0, 0, 0, 0.1) solid;
}
.invoice-pay-success{
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  margin-top:10rpx;
}
.success-modal-title text{
  display: inline-block;
  font-size:30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-weight:600;
  color:rgba(51,51,51,1);
  vertical-align: top;
  margin-left: 10rpx;
}
.success-modal-content{
  margin: 0 32rpx;
  font-size: 28rpx;
  color: #999999;
  text-align: left;
}
.success-modal-block{
  margin-bottom: 20rpx;
}
.success-modal-block text{
  width: 320rpx;
  display: inline-block;
}
.success-modal-block .success-modal-lable{
  color: #333333;
  width: 190rpx;
  vertical-align: top;
  display: inline-block;
}
.success-modal-btn{
  width:280rpx;
  height:68rpx;
  background:rgba(232,67,88,1);
  box-shadow:0rpx 11rpx 46rpx 0rpx rgba(234,79,95,0.18);
  border-radius:34rpx;
  color: #ffffff;
  margin: 50rpx auto;
  font-size:28rpx;
  line-height:68rpx; 
}
.invoice-prohibit{
  background: rgba(249,202,207,1);
}