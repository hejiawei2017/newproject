.container-inner {
  position: relative;
  padding: 10rpx;
  box-sizing: content-box;
  background-color: rgb(244, 244, 244);
}

.container {
  height: 1334rpx;
  background-color: rgb(244, 244, 244);
}

.top-bg {
  position: absolute;
  left: 10rpx;
  top: 0rpx;
  width: 730rpx;
  height: 625rpx;
  z-index: 1;
}
.container-tab {
  padding: 20rpx;
  padding-top: 0rpx;
}
.tabs-inner {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 9px 27px 0px rgba(0, 0, 0, 0.1);
  border-radius: 9px;
}
.tabs > .weui-navbar {
  border-radius: 9px !important;
}

.top {
  position: relative;
  z-index: 2;
}
.up-rule {
  font-size: 38rpx;
  padding: 20rpx;
  text-indent: 34rpx;
  font-weight: 500;
  color: rgba(133, 111, 70, 1);
}
.bottom {
  padding: 18rpx;
}
.bottom-inner {
  border-radius: 9px;
  font-size: 25rpx;
  font-weight: 400;
  color: rgba(67, 67, 67, 1);
  padding: 27rpx;
  background-color: white;
}
.bottom-inner .right-msg {
  padding: 5rpx;
}

.bottom-heard {
  font-size: 38rpx;
  font-weight: 500;
  border-left: 4rpx solid #e53e51;
  line-height: 30rpx;
  text-indent: 10rpx;
  margin: 4px 0px;
  margin-bottom: 15px;
}
.bottom-footer {
  font-size: 25rpx;
  font-weight: 400;
  color: rgba(196, 196, 196, 1);
  margin-top: 10px;
}
.tips {
  font-size: 26rpx;
  font-weight: bold;
}
