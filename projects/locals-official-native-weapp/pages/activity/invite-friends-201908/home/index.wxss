.banner {
    height: 492rpx;
    overflow: hidden;
    display: block;
    position: relative;
}

.banner-image {
    display: block;
    overflow: hidden;
    width: 100%;
    height: 492rpx;
}

.banner .rules {
    position: absolute;
    width: auto;
    height: 56rpx;
    line-height: 56rpx !important;
    top: 48rpx;
    right: 0;
    padding: 0 26rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 28rpx 0 0 28rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: rgba(67, 67, 67, 1);
    line-height: 46rpx;
}


.bonus {
    /* padding-top: 40rpx; */
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding: 40rpx 26rpx 0 26rpx;
}

.bonus .bonus-item {
    width: 50%;
    overflow: hidden;
    margin: 0 8rpx;
}

.bonus .bonus-item .bonus-item--title {
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    color: rgba(67, 67, 67, 1);
    line-height: 48rpx;
    margin-bottom: 16rpx;
}

.bonus .bonus-item .bonus-item--img {
    display: inline-block;
    width: 342rpx;
    height: 184rpx;
}

.invite-button-group {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 52rpx;
    margin: 20rpx 0 58rpx 0;
}

.invite-button-item {
    width: 100%;
    text-align: center;
}

.invite-button-item .invite-button {
    display: inline-block;
    width: 300rpx !important;
    height: 72rpx;
    margin: 0;
    line-height: 72rpx;
    width: 47%;
    color: #fff;
    text-align: center;
    background: rgba(229, 62, 81, 1);
    border-radius: 36rpx;
    font-size: 32rpx;
    font-weight: 500;
}

.invite-button-item::after {
    border: 0;
}

.bonus-box {
    padding: 0 40rpx;
    box-sizing: border-box;
}


.record-title {
    padding-top: 85rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.record-title-text {
    color: #333333;
    font-size: 30rpx;
    padding: 0 40rpx;
}

.record-title-line {
    height: 1rpx;
    width: 28%;
    background-color: #E5E5E5;
}

.record-list-container,
.record-empty {
    padding-top: 15rpx;
    padding-bottom: 30rpx;
}

.record-list-total {
    display: block;
    text-align: center;
    font-size: 26rpx;
    color: #686868;
}

.record-list-total-color {
    color: #E84358
}

.record-list {
    padding-top: 55rpx;
}

.record-item {
    padding: 0 50rpx 36rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 80rpx;
    overflow: hidden;
}

.record-item-avatar {
    width: 80rpx;
    height: 80rpx;
    display: block;
    overflow: hidden;
}

.record-item-avatar-image {
    width: 80rpx;
    height: 80rpx;
    overflow: hidden;
    border-radius: 40rpx;
}

.record-item-meta {
    padding-left: 20rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.record-item-phone {
    color: #333333;
    font-size: 26rpx;
}

.record-item-price {
    color: #E84358;
    font-size: 22rpx;
}

.record-item-time {
    color: #333333;
    font-size: 26rpx;
}


.bonus-card {
    box-sizing: border-box;
    padding: 26rpx 30rpx;
    width: 100%;
    min-height: 240rpx;
    display: flex;
    flex-direction: column;
    background: url('https://locals-house-prod.oss-cn-shenzhen.aliyuncs.com//localhomeqy/house_share_1bonus/bonus_card_bg.png') no-repeat;
    background-size: 100% 100%;
}

.bonus-card .title {
    font-size: 36rpx;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
    line-height: 54rpx;
}

.bonus-card .content {
    flex: 1;
}

.bonus-card .content .text__bottom__small {
    font-size: 52rpx;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
    line-height: 78rpx;
}

.bonus-card .content .text__big {
    font-size: 108rpx;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
    line-height: 140rpx;
}

.bonus-card .des {
    font-size: 20rpx;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    line-height: 22rpx;
}

.show-more-btn {
    font-size: 32rpx;
    font-weight: 500;
    color: rgba(253, 129, 117, 1);
    line-height: 48rpx;
    text-align: center;
    text-decoration: underline;
}

.rules-content {
    box-sizing: border-box;
    padding: 0 46rpx;
    font-size:24rpx;
    font-weight:300;
    color:rgba(67,67,67,1);
    /* line-height:40rpx; */
}

.rules-content .title {
    /* display: block; */
    font-weight: 600;
}
