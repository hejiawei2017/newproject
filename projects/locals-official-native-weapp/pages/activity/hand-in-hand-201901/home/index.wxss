.banner {
  height: 691rpx;
  overflow: hidden;
  display: block;
}

.banner-image {
  display: block;
  overflow: hidden;
  width: 100%;
  height: 691rpx;
}

.coupon {
  padding-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.slogan {
  display: block;
  color: rgba(232, 67, 88, 1);
  font-size: 28rpx;
  margin-top: 70rpx;
  text-align: center;
}

.coupon-image {
  width: 317rpx;
  height: 123rpx;
  overflow: hidden;
  margin: 0 8rpx;
  filter: drop-shadow(0rpx 8rpx 13rpx rgba(235, 97, 108, 0.42));
  -webkit-filter: drop-shadow(0rpx 8rpx 13rpx rgba(235, 97, 108, 0.42));
}

.invite-button-group {
  padding: 78rpx 50rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.invite-button-item {
  background-color: #E84358;
  border-radius: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  width: 47%;
  color: #fff;
  box-shadow: 0 8rpx 13rpx #EB616C;
  text-align: center;
}

.invite-button-item::after {
  border: 0;
}

.invite-button-wechat {
  background-color: #EE8485;
  box-shadow: 0 8rpx 13rpx rgba(235, 97, 108, 0.42);
}

.record-title {
  padding-top: 85rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.record-title-text {
  color: #333333;
  font-size: 30rpx;
  padding: 0 40rpx;
}

.record-title-line {
  height: 1rpx;
  width: 28%;
  background-color: #E5E5E5;
}

.record-list-container, .record-empty {
  padding-top: 15rpx;
  padding-bottom: 30rpx;
}

.record-list-total {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #686868;
}

.record-list-total-color {
  color: #E84358
}

.record-list {
  padding-top: 55rpx;
}

.record-item {
  padding: 0 50rpx 36rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  overflow: hidden;
}

.record-item-avatar {
  width: 80rpx;
  height: 80rpx;
  display: block;
  overflow: hidden;
}

.record-item-avatar-image {
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 40rpx;
}

.record-item-meta {
  padding-left: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-item-phone {
  color: #333333;
  font-size: 26rpx;
}
.record-item-price {
  color: #E84358;
  font-size: 22rpx;
}

.record-item-time {
  color: #333333;
  font-size: 26rpx;
}
