<scroll-view scrollY="{{true}}" class="page-container">
  <image
    class="banner-image"
    src="https://locals-house-prod.oss-cn-shenzhen.aliyuncs.com//localhomeqy/new_user_register/newbg.png"
    mode="widthFix"
  />
  <view class="form">
    <view class="input-box" bindtap="signIn">
        <image src="https://oss.localhome.cn/new_icon/phone00@2x.png" class="phone" />
        <text class="text">手机号</text>
        <input cursor-spacing="200" type="text" placeholder="请输入手机号" placeholder-style="color:#cccccc" maxlength="11" data-name="phone" bindinput="changeInput"/>
    </view>
    <view class="input-box">
        <image src="https://oss.localhome.cn/new_icon/identity00@2x.png" class="identity" />
        <text class="text">验证码</text>
        <input cursor-spacing="150" type="text" placeholder="请输入短信验证码" placeholder-style="color:#cccccc" maxlength="8" data-name="code" bindinput="changeInput"/>
        <button type="default" class="getCode" bindtap="getCode">{{overTime != '60' ? overTime + '秒':'获取验证码'}}</button>
    </view>
    <view class="button-box">
        <button type="warn" class="login" bindtap="receiveCoupons">即刻注册成为会员</button>
    </view>
  </view>
  <!-- 透明图层覆盖按钮部分 -->
  <view class='coverBtn' bindtap='jumpToVip'></view>
</scroll-view>

<view class="success-modal" hidden="{{modalHidden}}">
  <view class="success-modal-container">
    <view class="success-modal-wrap">
      <view class="content-container-success">
        <text class="success-title">恭喜您成为路客会员</text>
      </view>
      <image mode="aspectFill" class="modal-coupon-image" src="https://oss.localhome.cn/localhomeqy/new_user_redpacket/couponn100.png"></image>
      <view class="content-container">
        <text class="success-content">100元红包已放入您的钱包</text>
      </view>
      <navigator url="/pages/activity/new-user-register/poster/index" hover-class="navigator-hover" open-type="redirect" class="tap-look-button">邀请好友注册</navigator>
    </view>
  </view>
</view>

<!-- 登录框 -->
<auth-drawer-box 
    id="auth-drawer-box"
    initHide="{{ true }}"
    bindMobile="{{ false }}"
    bind:cancelEvent="signInCallback"
/>

