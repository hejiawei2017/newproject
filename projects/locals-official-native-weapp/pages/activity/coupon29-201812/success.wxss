.title {
	font-size: 36rpx;
	font-weight: 400;
	line-height: 29rpx;
	letter-spacing: 0px;
	color: #484848;
}

.descript {
	font-size: 27rpx;
	font-weight: 300;
	line-height: 59rpx;
	letter-spacing: 0px;
	color: #999999;
	margin-top: 0rpx;
	white-space: pre;
}

.footer {
	position: absolute;
	bottom: 49rpx;
	height: 80rpx;
	line-height: 80rpx;
	left: 0;
	right: 0;
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	padding: 0 40rpx;
	font-size: 28rpx;
	font-weight: 300;
	text-align: center;
}

.footer .footer-left {
	width: 327rpx;
	border-radius: 12rpx;
	border: solid 1px #e84358;
	color: #e84358;
  background: white;
}

.footer .footer-right {
	width: 327rpx;
	background-color: #e84358;
	border-radius: 12rpx;
	color: #ffffff;
}

.business-container {
	position: relative;
	margin-top: 70rpx;
	padding: 0 50rpx;
}

.business-container::before {
	content: '';
	display: block;
	height: 1px;
	width: 100%;
	background-color: #e5e5e5;
}

.business-container .label {
	position: absolute;
	margin: auto;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	width: 188rpx;
	height: 33rpx;
	padding-left: 6rpx;
	background-color: #e84358;
	font-size: 24rpx;
	font-weight: 300;
	letter-spacing: 1px;
	color: #ffffff;
	text-align: center;
	line-height: 33rpx;
}

.business-container .label::before {
	position: absolute;
	font-size: 0;
	top: 0;
	left: 0;
	content: '';
	display: block;
	width: 0px;
	border-top: #e84358 16rpx solid;
	border-left: white 4rpx solid;
	border-bottom: #e84358 16rpx solid;
}

.business-container .label::after {
	position: absolute;
	font-size: 0;
	top: 0;
	right: 0;
	content: '';
	display: block;
	width: 0px;
	border-top: #e84358 16rpx solid;
	border-right: white 4rpx solid;
	border-bottom: #e84358 16rpx solid;
}

.default-container {
	position: relative;
	margin-top: 60rpx;
	padding: 0 50rpx;
}

.default-container .label {
	position: absolute;
	margin: auto;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	width: 188rpx;
	height: 33rpx;
	padding-left: 6rpx;
	background-color: white;
	font-size: 24rpx;
	font-weight: 300;
	line-height: 43rpx;
	letter-spacing: 1px;
	color: #333333;
	text-align: center;
	line-height: 33rpx;
}

.default-container::before {
	content: '';
	display: block;
	height: 1px;
	width: 100%;
	background-color: #e5e5e5;
}

.privileges {
	display: flex;
	flex-flow: row wrap;
	justify-content: space-between;
	padding: 69rpx 80rpx 0 80rpx;
}

.privileges .item {
	flex-basis: 33%;
	display: flex;
	flex-flow: column nowrap;
	justify-content: center;
	align-items: center;
	margin-bottom: 20rpx;
}

.privileges .item text:nth-child(2) {
	margin-top: 27rpx;
	font-size: 24rpx;
	font-weight: 400;
	letter-spacing: 0px;
	color: #333333;
}

.privileges .item text:nth-child(3) {
	margin-top: 13rpx;
	font-size: 18rpx;
	font-weight: 300;
	letter-spacing: 0px;
	color: #333333;
	opacity: 0.5;
}

.default {
	justify-content: center !important;
}

.default .item {
	margin-right: 40rpx;
}

.default .item:last-child {
	margin-right: 0;
}

.coupon50 {
  margin-top: 30rpx;
  width: 470rpx;
  height: 140rpx;
}

.business-banner {
  display: block;
  width: 671rpx;
  height: 288rpx;
  margin: 40rpx auto;
}