@import "./index.wxss";

.lotel-logo {
  width: 258rpx;
}
.main-container {
  position: relative;
  height: 90vh;
}
.main-container.iphoneXStyle {
  height: 85vh;
}
.main-container .main-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 260rpx;
  background: linear-gradient(to top, rgb(0, 0, 0), rgba(0, 0, 0, 1) 40%, rgba(0, 0, 0, .6) 70%, rgba(49, 49, 49, 0) 100%);
  box-sizing: border-box;
  padding: 10rpx 28rpx;
}
.main-container .main-info.iphoneXStyle {
  bottom: 0;
  height: 260rpx;
}
.main-container .main-info .title {
  font-family: PingFangSC-bold;
  font-size: 48rpx;
	line-height: 48rpx;
  letter-spacing: 1px;
  font-weight: 700;
  margin-top: 20rpx;
  color: #ffffff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.main-container .main-info .lotel-tags {
  width: 85%;
  margin-top: 20rpx;
  white-space: nowrap;
}
.main-container .main-info .lotel-tags .item {
  display: inline-block;
  text-align: center;
  color: white;
  padding: 5rpx 6rpx;
  border-radius: 4px;
  border: solid 1px #ffffff;
  letter-spacing: 0.4rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.line-container {
  padding: 50rpx 28rpx;
  position: relative;
}
.line-container::after {
  content: '';
  width: 690rpx;
	height: 1px;
	background-color: #000000;
  opacity: 0.11;
  position: absolute;
  bottom: 0;
  margin: 0 auto;
}
.main-container .main-footer {
  position: fixed;
  box-sizing: border-box;
  height: 10vh;
  z-index: 100;
  left: 0;
  right: 0;
  bottom: 0;
  border-top: 1px solid rgba(255, 255, 255, 0.23);
  padding: 25rpx 37rpx;
  display: flex;
  background: black;
  justify-content: space-between;
  align-items: center;
  transition: all 0.4s ease;
}
.main-container .main-footer.active {
  border-top: 1px solid hsla(0, 0%, 81%, 0.23);
  background: white;
}
.main-container .main-footer > .left {
  transition: all 0.4s ease;
  color: white;
}
.main-container .main-footer.active > .left {
  color: black;
}
.main-container .main-footer > .left > .money {
  font-size: 36rpx;
}
.main-container .main-footer > .left > .money > text {
  font-size: 24rpx;
  margin-left: 8rpx;
}
.main-container .main-footer > .left > .contact-landlord {
  display: flex;
  align-items: center;
  font-size: 24rpx;
	letter-spacing: 0.5px;
}
.main-container .main-footer > .left > .contact-landlord image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.main-container .main-footer > .left > .money:before {
  content: 'Â¥';
  font-size: 24rpx;
}
.main-container .main-footer > .right {
  width: 234rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #ffffff;
  border-radius: 12rpx;
  font-size: 28rpx;
	letter-spacing: 0.6px;
  color: #333333;
  transition: all 0.4s ease;
}
.main-container .main-footer.active > .right {
  background-color: #8a1353;
  color: white;
}
.main-container .padding-bottom-100rpx {
  height: 15vh;
  padding-bottom: 100rpx;
}

/* facilities start */
.facilities {
  padding: 70rpx 0rpx 0rpx 0rpx;
}
.facilities > .title {
  text-align: center;
  font-size: 36rpx;
  line-height: 36rpx;
	letter-spacing: 0.7rpx;
  color: #333333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.facility-info {
  padding: 50rpx 6rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.11);
}
.facility-info:last-child {
  border-bottom: none;
}
.facility-info > .title {
  text-align: center;
  font-size: 30rpx;
	letter-spacing: 0.7rpx;
	color: #666666;
}
.facility-info .icons {
  display: flex;
  flex-flow: row wrap;
}
.facility-info .icons .item {
  margin-top: 60rpx;
  height: 120rpx;
  flex-basis: 25%;
  max-width: 25%;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  overflow: hidden;
}
.facility-info .icons .item > image {
  width: 48rpx;
}
.facility-info .icons .item > .name {
  width: 100%;
  font-family: PingFangSC-Light;
  font-size: 28rpx;
  line-height: 28rpx;
  margin-top: 20rpx;
	letter-spacing: 0.6px;
  color: #555555;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* facilities end */