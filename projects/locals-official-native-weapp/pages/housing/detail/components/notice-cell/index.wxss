.notice-cell {
    position:fixed;
    top: 50rpx;
    left: 50rpx;
    z-index: 100;
    display: flex;
    height: 100rpx;
}

.notice-cell .cell--left {
    z-index: 10;
    width: 100rpx;
    height: 100rpx;
    background: rgba(255,255,255,1);
    border-radius: 100%;
    padding: 2rpx;
}

.notice-cell .cell--left image {
    width: 98rpx;
    height: 98rpx;
    background: rgba(255,255,255,1);
    border-radius: 100%;
}

.notice-cell .cell--right {
    z-index: 1;
    margin-left: -50rpx;
    margin-top: 20rpx;
    max-width: 450rpx;
    height: 60rpx;
    background:rgba(0,0,0,0.42);
    border-radius:30rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:60rpx;
    padding:0 60rpx 0 100rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}