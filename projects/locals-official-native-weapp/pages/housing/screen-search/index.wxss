.container {
    display: flex;
    flex-flow: column nowrap;
    margin: 30rpx;
    padding-bottom: 120rpx;
}

.no-padding-top {
    padding-top: 0 !important;
}

.container .item {
    font-size: 34rpx;
	line-height: 54rpx;
    letter-spacing: 2rpx;
    font-weight: 300;
    padding: 40rpx 0;
    /* border-bottom: 1px solid #e5e5e5; */
}

.no-border-bottom {
    border-bottom: none !important;
}

.container view .title {
    font-size: 36rpx;
    line-height: 54rpx;
    letter-spacing: 1rpx;
    font-weight: 300;
    color: #000000;
}

.range-slider {
    width: 640rpx;
    margin: 0 auto;
    margin-top: 40rpx;
}

.price-list {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
	line-height: 54rpx;
	letter-spacing: 1rpx;
    color: #555555;
    margin-top: 20rpx;
}

.price-list .on {
    color: #e84358;
}

.radio {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
}

.radio .text {
    font-size: 26rpx;
}

.radio .circular {
    display: flex;
    justify-content: center;
    width: 32rpx;
	height: 32rpx;
	border-radius: 100%;
    border: solid 2rpx #e84358;
    align-self: center;
}

.radio .circular .dot {
    align-self: center;
    background: #e84358;
    width: 16rpx;
    height: 16rpx;
    border-radius: 100%;
}

.amount-control {
    margin-top: 30rpx;
}

.tags-container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    font-size: 24rpx;
	line-height: 54rpx;
	letter-spacing: 1px;
    color: #555555;
    margin-top: 50rpx;
}

.tags-container view {
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
	border-radius: 25rpx;
    border: solid 1px #e5e5e5;
    text-align: center;
    margin-bottom: 20rpx;
}


.footerView{
  height: 150rpx;
  background: #ffffff;
  box-shadow:0px -6px 8px 0px rgba(0, 0, 0, 0.02);
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}
.footer {
    position: absolute;
    bottom: 50rpx;
    left: 20rpx;
    right: 20rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
}

.footer .reset {
    display: block;
    background: rgb(255, 255, 255);
    border: 1px solid #E84254;
    font-size: 30rpx;
    color: #E84254;
    border-radius: 10rpx;
}

.footer button {
    display: block;
    background: #E84254;
    font-size: 30rpx;
    color: #fff;
    border-radius: 10rpx;
    margin: 0;
}

.footer button:nth-of-type(1) {
    flex-basis: 30%;
}

.footer button:nth-of-type(2) {
    flex-basis: 68%;
}
.titlePrice{
    font-size:30rpx;
    display: inline-block;
    font-weight: 400;
    color: #E84358;
    margin-left: 10rpx;
    line-height:0rpx;
}
.itemTags{
  margin-top: 40rpx;
  display: flex;
  flex-flow: wrap;
  flex-direction:row;
  justify-content: flex-start;
}
.itemTags>view{
  /* flex: 1; */
  font-size: 24rpx;
  text-align: center;
  border:1px solid rgba(220,220,220,1);
  border-radius:6px;
  width:160rpx;
  height:70rpx;
  color: #333333;
  line-height: 30rpx;
  margin:10rpx 5rpx;
  position: relative;
}
.itemTags>view>text{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 160rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.itemTags .choose{
  background-color: #E84358;
  border:1px solid #E84358;
  color: #ffffff;
}
.itemTags .rpx22{
  font-size: 22rpx
}