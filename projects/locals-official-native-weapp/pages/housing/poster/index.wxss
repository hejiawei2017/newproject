/* pages/housing/poster/index.wxss */
.poster-container {
  position: relative;
  min-height: 249rpx;
}

.wait {
  position: absolute;
  left: 0;
  top: 100rpx;
  width: 100%;
  font-size: 30rpx;
  color: #999;
  text-align: center;
  z-index: 1;
}

.poster {
  background-color: transparent;
  position: relative;
  z-index: 2;
}
.button-wrap {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 30rpx;
}
.button-wrap button {
  width: 300rpx;
  height: 70rpx;
  background: #e84358;
  border-radius: 35rpx;
  color: white;
  font-weight: bold;
  line-height: 70rpx;
}
.tips {
  background: rgba(0, 0, 0, 0.04);
  margin: 40rpx 36rpx;
  padding: 38rpx 28rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
}
.tips .title {
  font-family: "PingFangSC-Semibold";
  font-size: 26rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: r47px;
  letter-spacing: 1rpx;
  color: #333333;
}
.tips .content {
  margin-top: 40rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 44rpx;
  letter-spacing: 1rpx;
  color: #999999;
}

.bonus-box {
  padding: 40rpx;
  box-sizing: border-box;
}

.bonus-box > .title {
  line-height:54rpx;
  display: flex;
  margin-bottom: 40rpx;
}

.bonus-box > .title .title-text {
  font-size:36rpx;
  font-weight:bold;
  color:rgba(67,67,67,1);
  text-align: center;
  margin: 0 10rpx;
}

.bonus-box > .title .left-line {
  flex: 1;
  width:128rpx;
  height:2rpx;
  margin-top: 27rpx;
  background: linear-gradient(to right,#fff,#434343);
}

.bonus-box > .title .right-line {
  flex: 1;
  height:2rpx;
  width:128rpx;
  margin-top: 27rpx;
  background: linear-gradient(to right,#434343,#fff);
}

.bonus-box .bonus-card {
  box-sizing: border-box;
  padding: 26rpx 30rpx;
  width: 100%;
  min-height: 240rpx;
  display: flex;
  flex-direction: column;
  background: url('https://locals-house-prod.oss-cn-shenzhen.aliyuncs.com//localhomeqy/house_share_1bonus/bonus_card_bg.png') no-repeat;
  background-size: 100% 100%;
}

.bonus-box .bonus-card .title {
  font-size:36rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  line-height:54rpx;
}

.bonus-box .bonus-card .content {
  flex: 1;
}

.bonus-box .bonus-card .content .text__bottom__small {
  font-size:52rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  line-height:78rpx;
}

.bonus-box .bonus-card .content .text__big {
  font-size:108rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  line-height:140rpx;
}

.bonus-box .bonus-card .des {
  font-size:20rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:22rpx;
}

.bonus-box .scroll-notice {
  display: block;
  text-align: center;
  margin: 32rpx 0;
  font-size:32rpx;
  font-weight:400;
  color:rgba(253,129,117,1);
  line-height:48rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.bonus-intro .bonus-text {
  font-size:24rpx;
  font-weight:300;
  color:rgba(67,67,67,1);
  line-height:36rpx;
}

.show-more-btn {
  font-size:32rpx;
  font-weight:500;
  color:rgba(253,129,117,1);
  line-height:48rpx;
  text-align: center;
  text-decoration: underline;
}