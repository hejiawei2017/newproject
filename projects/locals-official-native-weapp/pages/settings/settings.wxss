.settings{
    width:84%;
    margin-left:8%;
    padding-bottom:120rpx;
}
.message{
    width:100%;
    text-align:center;
    padding-top:40rpx;
    font-size: 0;
}
.message .message-head{
    display:inline-block;
    width:140rpx;
    height:140rpx;
    border-radius:100rpx;
    overflow: hidden;
}
.message  .message-head image{
  width:100%;
  height:100%;
  vertical-align: bottom;
}
.message .nickname{
    margin-top: 29rpx;
    line-height:19px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 19px;
    letter-spacing: 2rpx;
    color: #484848;
    font-family: "PingFangSC-Medium";
}
.message .nickname .adite{
    margin-left: 20rpx;
    width: 24rpx;
    max-height: 34rpx;
}
.message .nickname .adite image{
    width:24rpx;
}

.change-mes{
    padding:0rpx 40rpx;
    margin-top: 115rpx;
}
.part{
    padding:60rpx 0 50rpx 0;
    border-bottom:1px solid rgba(51, 51, 51, .1);
    text-align: right;
    font-size: 16px;
    line-height: 16px;
    color: #484848;
    font-family: 'PingFangSC-Regular';
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.part .info{
  display: flex;
  align-items: center;
}
.title{
    font-size: 16px;
    font-family: 'PingFangSC-Regular';
    color: #484848;
}

.arrow{
    display:inline-block;
}
.arrow {
    margin-left: 30rpx;
}
.arrow:after {
    content: ' ';
    display: inline-block;
    height: 18rpx;
    width: 18rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #888888;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}
.weui-uploader__input-box:before, .weui-uploader__input-box:after {
    content: " ";
    position: static;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #D9D9D9;
}
.info{
    margin-right: 40rpx;
    display:inline-block;
    color: rgb(99, 97, 97);
    font-size: 16px;
    font-family: "arial","微软雅黑";
}

.login-out {
    margin-top: 50rpx;
    color: #444444;
    border: 1px solid #D9D9D9;
    padding: 10rpx 0;
    border-radius: 10rpx;
    text-align: center;
}