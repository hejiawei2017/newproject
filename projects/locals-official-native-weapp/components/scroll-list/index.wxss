.scroll-list-container {
    width: 100%;
    background-color: #fff9ef;
    padding: 0 45rpx;
}

.swiper {
    width: 100%;
    height: 450rpx;
    position: relative;
}
.swiper:after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 1rpx;
    display: inline-block;
    width: 100%;
    height: 2rpx;
    background-color: #fff9ef;
}

.scroll-list-container,
.scroll-list-container view,
.scroll-list-container text {
    box-sizing: border-box;
}

.scroll-item {
    width: 100%;
    min-height: 150rpx;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    position: relative;
    font-size: 29rpx;
    color: #434343;
    font-weight: 500;
}

.scroll-item:after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 1rpx;
    display: inline-block;
    margin: 0 45rpx;
    width: calc(100% - 90rpx);
    height: 2rpx;
    background-color: #dfc79f;
    opacity: 0.3;
}

.name {
    font-weight: 400;
    padding: 0 18rpx;
}

.prize {
    padding-left: 8rpx;
    font-weight: 900;
    color: #f74d42;
}

.scroll-item-image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}
