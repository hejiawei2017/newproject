/** time-line **/
.time-line {
  padding-top: 39rpx;
  display: flex;
  flex-flow: column nowrap;
}

.time-line .item {
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  height: 120rpx;
}

.dot {
  position: absolute;
  left: 260rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
}

.dot-line {
  margin-top: 10rpx;
  width: 1px;
  height: 70rpx;
  background-color: rgba(51, 51, 51, 0.2);
}

.icon-success-dot {
  width: 24rpx;
  height: 24rpx;
  background: url(https://oss.localhome.cn/new_icon/suss1.png) no-repeat;
  background-size: 100% 100%;
}

.icon-clock {
  width: 24rpx;
  height: 24rpx;
  background: url(https://oss.localhome.cn/new_icon/clock1.png) no-repeat;
  background-size: 100% 100%;
}

.time-line .item .time-descript {
  position: absolute;
  left: 60rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(72, 72, 72, 1);
}

.time-line-dete {
  font-size: 20rpx;
  line-height: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 20rpx;
}

.time-line-descript {
  position: absolute;
  left: 319rpx;
  top: 30rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.time-line .item .before-step {
  color: #555555;
}

.time-line .item .current-step {
  color: #e84358;
}

.left-dot {
  display: flex;
  flex-flow: column;
  align-items: center;
}

.left-time-descript {
  margin-left: 17rpx;
}

.left-title {
  font-size: 26rpx;
  line-height: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(72, 72, 72, 1);
}

.left-title-timehint {
  font-size: 20rpx;
  color: #999;
}

.left-tips {
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 17rpx;
  display: flex;
  height: 39rpx;
  line-height: 39rpx;
}

.left-tag-head {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 19.5rpx 15rpx 19.5rpx 0;
  border-color: transparent rgba(60, 159, 168, 0.08) transparent transparent;
}
.left-tag-body {
  background: rgba(60, 159, 168, 0.08);
  text-align: right;
  padding: 0 11rpx;
  color: rgba(60, 159, 168, 1);
}

.body-red {
  background: rgba(232, 67, 88, 0.08);
  color: rgba(232, 67, 88, 1);
}
.head-red {
  border-color: transparent rgba(232, 67, 88, 0.08) transparent transparent;
}